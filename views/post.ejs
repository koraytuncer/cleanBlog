<%- include("partials/_header.ejs") -%>

<body>

  <%- include("partials/_navigation.ejs") -%>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('img/post-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="post-heading">
            <h1><%= postdetail.title %> </h1>
            <h2 class="subheading">
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Post Content -->
  <article>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <p><%= postdetail.description %> </p>

         

          <p class="post-meta">Posted by
            <a href="#">Koray Tuncer</a>
            <%= postdetail.dateCreated %></p>
        </div>
      </div>
      <div class="clearfix">
        <a class="btn btn-warning float-right" href="/npost/edit/<%= postdetail._id %>">Edit</a>
        <a class="btn btn-danger float-right" href="/npost/<%= postdetail._id %>?_method=DELETE" onclick="return confirm('Silmek istediÄŸinize emin misiniz?')">Delete</a>
      </div>
    </div>
    
  </article>
  
  <hr>
  <%- include("partials/_footer.ejs") -%>

</body>

</html>
